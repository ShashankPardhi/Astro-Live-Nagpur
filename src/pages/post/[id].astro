---
import SearchBar from '../../components/SearchBar.astro';

export async function getStaticPaths() {
  try {
    const response = await fetch('https://thelivenagpur.com/wp-json/wp/v2/posts?_embed');
    const posts = await response.json();
    return posts.map(post => ({
      params: { id: post.slug },
      props: { post }
    }));
  } catch (error) {
    console.error('Error fetching posts:', error);
    return [];
  }
}

const { id } = Astro.params;
let post;
let error;
let relatedPosts = [];

try {
  // Fetch the main post
  const response = await fetch(`https://thelivenagpur.com/wp-json/wp/v2/posts?slug=${id}&_embed`);
  const posts = await response.json();
  post = posts[0];
  
  if (!post) {
    throw new Error('Post not found');
  }

  // Fetch related posts from the same category
  if (post._embedded['wp:term']) {
    const categories = post._embedded['wp:term'][0];
    if (categories && categories.length > 0) {
      const categoryId = categories[0].id;
      const relatedResponse = await fetch(
        `https://thelivenagpur.com/wp-json/wp/v2/posts?categories=${categoryId}&exclude=${post.id}&per_page=3&_embed`
      );
      relatedPosts = await relatedResponse.json();
    }
  }
} catch (e) {
  error = 'Failed to load the article';
  console.error('Error:', e);
}

// Get the formatted date for the URL
const getFormattedDate = (dateString: string) => {
  const date = new Date(dateString);
  return `/${date.getFullYear()}/${String(date.getMonth() + 1).padStart(2, '0')}/${String(date.getDate()).padStart(2, '0')}`;
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{error ? 'Error' : post.title.rendered} - The Live Nagpur</title>
    {!error && (
      <>
        <meta name="description" content={post.excerpt.rendered.replace(/<[^>]*>/g, '').slice(0, 160)} />
        <meta property="og:title" content={`${post.title.rendered} - The Live Nagpur`} />
        <meta property="og:description" content={post.excerpt.rendered.replace(/<[^>]*>/g, '').slice(0, 160)} />
        {post._embedded["wp:featuredmedia"]?.[0]?.source_url && (
          <meta property="og:image" content={post._embedded["wp:featuredmedia"][0].source_url} />
        )}
        <link rel="canonical" href={`https://thelivenagpur.com/${getFormattedDate(post?.date)}/${post?.slug}/`} />
      </>
    )}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white border-b border-gray-200 fixed w-full top-0 z-10">
      <div class="max-w-6xl mx-auto px-4 py-3">
        <nav class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-blue-600">The Live Nagpur</a>
          <div class="flex items-center space-x-6">
            <div class="hidden md:block w-64">
              <SearchBar placeholder="Quick search..." />
            </div>
            <a href="/" class="text-blue-600 hover:text-blue-800">‚Üê Back to Home</a>
          </div>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-4 pt-24 pb-12">
      {error ? (
        <div class="bg-red-50 p-6 rounded-lg text-center">
          <h1 class="text-2xl font-bold text-red-600 mb-2">Error</h1>
          <p class="text-red-700">{error}</p>
          <a href="/" class="inline-block mt-4 px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
            Return to Homepage
          </a>
        </div>
      ) : (
        <>
          <article class="bg-white rounded-xl shadow-lg overflow-hidden mb-12">
            {post._embedded["wp:featuredmedia"]?.[0]?.source_url && (
              <div class="relative">
                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6">
                  <h1 class="text-4xl font-bold text-white mb-2" set:html={post.title.rendered} />
                </div>
                <img 
                  src={post._embedded["wp:featuredmedia"][0].source_url}
                  alt={post.title.rendered}
                  class="w-full h-[400px] object-cover"
                />
              </div>
            )}
            
            <div class="p-8">
              <div class="article-meta">
                <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-4">
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('en-US', {
                      weekday: 'long',
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {post._embedded?.author?.[0] && (
                    <span>By {post._embedded.author[0].name}</span>
                  )}
                  {post._embedded?.['wp:term']?.[0] && (
                    <div class="flex gap-2">
                      {post._embedded['wp:term'][0].map(category => (
                        <span class="px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm">
                          {category.name}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                {!post._embedded["wp:featuredmedia"]?.[0]?.source_url && (
                  <h1 class="text-4xl font-bold mb-6" set:html={post.title.rendered} />
                )}
              </div>
              
              <div class="prose max-w-none content" set:html={post.content.rendered} />
              
              <div class="mt-8 pt-6 border-t border-gray-200">
                <h3 class="text-lg font-semibold mb-4">Share this article:</h3>
                <div class="flex flex-wrap gap-4">
                  <a href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url)}&text=${encodeURIComponent(post.title.rendered)}`} 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center px-4 py-2 bg-[#1DA1F2] text-white rounded-lg hover:bg-[#1a8cd8] transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                    </svg>
                    Share on Twitter
                  </a>
                  <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url)}`} 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center px-4 py-2 bg-[#1877F2] text-white rounded-lg hover:bg-[#166fe5] transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
                    </svg>
                    Share on Facebook
                  </a>
                </div>
              </div>
            </div>
          </article>

          {relatedPosts.length > 0 && (
            <section class="related-posts">
              <h2 class="text-2xl font-bold mb-6">Related Articles</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {relatedPosts.map(relatedPost => {
                  const relatedPostDate = new Date(relatedPost.date);
                  const url = `${getFormattedDate(relatedPost.date)}/${relatedPost.slug}`;
                  const featuredImage = relatedPost._embedded?.["wp:featuredmedia"]?.[0]?.source_url;
                  
                  return (
                    <a href={url} class="block group">
                      <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
                        {featuredImage && (
                          <div class="aspect-w-16 aspect-h-9">
                            <img 
                              src={featuredImage} 
                              alt={relatedPost.title.rendered}
                              class="w-full h-48 object-cover"
                              loading="lazy"
                            />
                          </div>
                        )}
                        <div class="p-4">
                          <time datetime={relatedPost.date} class="text-sm text-gray-600">
                            {relatedPostDate.toLocaleDateString('en-US', {
                              month: 'short',
                              day: 'numeric',
                              year: 'numeric'
                            })}
                          </time>
                          <h3 
                            class="mt-2 text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors"
                            set:html={relatedPost.title.rendered}
                          />
                        </div>
                      </article>
                    </a>
                  );
                })}
              </div>
            </section>
          )}
        </>
      )}
    </main>

    <footer class="bg-gray-900 text-white mt-12">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="text-center">
          <h2 class="text-2xl font-bold mb-4">The Live Nagpur</h2>
          <p class="text-gray-400">Your trusted source for Nagpur news</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --primary-color: #2563eb;
    --text-primary: #1a202c;
    --text-secondary: #4a5568;
    --background-light: #f8fafc;
    --border-color: #e2e8f0;
  }

  body {
    font-family: 'Source Sans Pro', sans-serif;
    line-height: 1.6;
    margin: 0;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }

  .content {
    font-size: 1.125rem;
    color: var(--text-primary);
  }

  .content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem auto;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .content p {
    margin: 1.5rem 0;
    line-height: 1.8;
  }

  .content h2 {
    font-size: 1.875rem;
    margin: 2rem 0 1rem;
    color: var(--text-primary);
  }

  .content h3 {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem;
    color: var(--text-secondary);
  }

  .content a {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .content blockquote {
    border-left: 4px solid var(--primary-color);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .content ul, .content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .content li {
    margin: 0.5rem 0;
  }

  .article-meta {
    border-bottom: 2px solid var(--border-color);
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .content {
      font-size: 1rem;
    }

    .content h2 {
      font-size: 1.5rem;
    }

    .content h3 {
      font-size: 1.25rem;
    }
  }
</style>
